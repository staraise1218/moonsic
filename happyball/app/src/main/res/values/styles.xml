<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="@style/Theme.Leanback" />

    <style name="main_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/main_type</item>
    </style>

    <style name="main_type_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_home</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_semester_image">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="main_semester_frame">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@mipmap/main_semester_frame</item>
    </style>

    <style name="main_semester_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lesson_semester_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:textSize">@dimen/text_lesson</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_pager">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">120dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="home_pager_image">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:src">@mipmap/choice_episode</item>
    </style>

    <style name="home_pager_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/homepage</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">120dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="home_back_image">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:src">@mipmap/play_back</item>
    </style>

    <style name="home_back_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/back</item>
        <item name="android:textSize">@dimen/text_home</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="study_layout">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">350dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="study_image">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">350dp</item>
    </style>

    <style name="study_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <!--
        <item name="android:background">@color/text_bg</item>
        -->
        <item name="android:textSize">@dimen/text_lesson</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lyric_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">90dp</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="lyric_layout_other">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">90dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="center_text_twenty_six">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="center_text_twenty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="audio_list_item_text_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_song</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="audio_list_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_song</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dance_image">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">140dp</item>
    </style>

    <style name="dance_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">@dimen/text_song</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dance_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">120dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="dance_last">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">120dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="dance_next_image">
        <item name="android:layout_width">299dp</item>
        <item name="android:layout_height">97dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@mipmap/choice_episode</item>
    </style>

    <style name="dance_next_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/dance_next</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dance_next_last">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/dance_last</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="song_horn">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@mipmap/song_playing_def</item>
    </style>

    <style name="knowledge_answer_image">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:src">@mipmap/star</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
