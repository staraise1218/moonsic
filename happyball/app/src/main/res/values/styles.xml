<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="@style/Theme.Leanback" />

    <style name="main_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/main_type</item>
    </style>

    <style name="main_type_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_home</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_semester_image">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="main_semester_frame">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@mipmap/main_semester_frame</item>
    </style>

    <style name="main_semester_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_pager">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">120dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="home_pager_image">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:src">@mipmap/play_homepage</item>
    </style>

    <style name="home_pager_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/homepage</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">120dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="home_back_image">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:src">@mipmap/play_back</item>
    </style>

    <style name="home_back_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/back</item>
        <item name="android:textSize">@dimen/text_home</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="study_layout">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">360dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="study_image">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">350dp</item>
    </style>

    <style name="study_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <!--
        <item name="android:background">@color/text_bg</item>
        -->
        <item name="android:textSize">@dimen/text_lesson</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lyric_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="center_text_twenty_six">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_home</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="center_text_twenty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_home</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="audio_list_item_text_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_song</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="audio_list_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_song</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
