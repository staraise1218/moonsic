<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg_vedio_finish">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="120dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/iv_homepage"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_finish_homepage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/homepage"
                android:textSize="@dimen/text_home"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_finish_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/back"
                android:textSize="@dimen/text_home"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_song"
            android:layout_width="260dp"
            android:layout_height="340dp"
            android:focusable="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_center"
            android:layout_marginRight="80dp"
            android:nextFocusLeft="@id/rl_back"
            android:nextFocusRight="@id/rl_dance">

            <ImageView
                android:id="@+id/iv_song"
                android:layout_width="250dp"
                android:layout_height="335dp"
                android:src="@mipmap/ic_finish_song" />

            <TextView
                android:id="@+id/tv_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:text="@string/study_song"
                android:textSize="@dimen/text_lesson"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_dance"
            android:layout_width="260dp"
            android:layout_height="340dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ll_center"
            android:layout_marginLeft="80dp"
            android:nextFocusRight="@id/rl_homepage"
            android:nextFocusLeft="@id/rl_song">

            <ImageView
                android:id="@+id/iv_dance"
                android:layout_width="250dp"
                android:layout_height="335dp"
                android:src="@mipmap/ic_finish_dance" />

            <TextView
                android:id="@+id/tv_dance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:text="@string/study_dance"
                android:textSize="@dimen/text_lesson"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/pb_loading"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
