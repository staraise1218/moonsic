<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg_dance">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="120dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/ic_dance_homepage" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/ic_dance_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_homepage"
            android:layout_centerHorizontal="true"
            android:text="视频列表"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/iv_dance_boom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="152dp"
            android:layout_marginTop="135dp"
            android:src="@mipmap/ic_dance_boom" />

        <ImageView
            android:id="@+id/iv_dance_sky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_dance_boom"
            android:layout_toRightOf="@+id/iv_dance_boom"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_dance_sky" />

        <ImageView
            android:id="@+id/iv_dance_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_dance_boom"
            android:layout_toRightOf="@+id/iv_dance_sky"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_dance_dark" />

        <ImageView
            android:id="@+id/iv_dance_clouds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_dance_boom"
            android:layout_toRightOf="@+id/iv_dance_dark"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_dance_clouds" />

        <ImageView
            android:id="@+id/iv_dance_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_dance_boom"
            android:layout_below="@+id/iv_dance_boom"
            android:layout_marginTop="60dp"
            android:src="@mipmap/ic_dance_safe" />

        <ImageView
            android:id="@+id/iv_dance_ipad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_dance_safe"
            android:layout_toRightOf="@+id/iv_dance_safe"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_dance_ipad" />

        <ImageView
            android:id="@+id/iv_dance_computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_dance_safe"
            android:layout_toRightOf="@+id/iv_dance_ipad"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_dance_computer" />

        <ImageView
            android:id="@+id/iv_dance_thunder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_dance_safe"
            android:layout_toRightOf="@+id/iv_dance_computer"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_dance_thunder" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
